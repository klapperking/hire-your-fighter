<%= simple_form_for(fighter) do |f| %>
  <%= f.input :rating, as: :hidden, value: fighter.rating %>
  <%= f.input :stat_sum, as: :hidden, value: fighter.stat_sum %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price, as: :integer, hint: "Price in cents"%>
  <% if fighter.new_record? %>
    <%= f.input :strength, as: :integer %>
    <%= f.input :defense, as: :integer %>
  <% end %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
